{
    "manifest_version": 2,
    "name": "Auto Mark As Read",
    "applications": {
        "gecko": {
            "id": "auto-mark-as-read@mllr.pl"
        }
    },
    "description": "Automatically mark incoming messages as read if they are in one of selected folders. An attempt to revive & enhance 'Mark Junk Read' by Alex Cabal",
    "version": "1.0.12",
    "background": {
        "scripts": [
            "/background.js"
        ]
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "permissions": [
        "accountsRead",
        "messagesRead",
        "storage"
    ],
    "icons": {
        "48": "icons/icon.svg",
        "96": "icons/icon.svg"
    }
}